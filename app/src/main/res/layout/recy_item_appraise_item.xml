<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/shop_text_bottom"
    android:padding="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/recy_item_bill_image"
        android:layout_width="@dimen/dp_81"
        android:layout_height="@dimen/dp_81"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />
    <TextView
        android:id="@+id/recy_item_bill_text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/recy_item_bill_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/recy_item_bill_image"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        android:text="dgew"
        />
    <TextView
        android:id="@+id/recy_item_bill_text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/recy_item_bill_image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="#ff0606"
        android:text="afe"
        />
    <!--评价-->
    <Button
        android:id="@+id/recy_item_bill_button_evaluate"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_26"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/xrecy_item_go"
        android:text="去评价"
        android:textColor="#ffffff"
        />
</android.support.constraint.ConstraintLayout>