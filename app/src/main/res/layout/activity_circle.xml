<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingLeft="@dimen/dp_24"
    android:paddingRight="@dimen/dp_24"
    tools:context=".activity.CircleActivity">

    <TextView
        android:id="@+id/quanzi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的圈子"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_40"
        android:textSize="@dimen/sp_16"
        android:textColor="#666666"
        />
    <ImageView
        android:id="@+id/cir_image_delete"
        android:layout_width="@dimen/dp_24"
        android:layout_height="24dp"
        android:src="@mipmap/common_btn_delete"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/quanzi"
        />
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/cir_xrecy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quanzi"
        ></com.jcodecraeer.xrecyclerview.XRecyclerView>
</android.support.constraint.ConstraintLayout>