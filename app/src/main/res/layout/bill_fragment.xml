<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:paddingBottom="@dimen/dp_50"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/bill_group"
        android:background="@drawable/bill_radiogroup_radius"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_102"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_40"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:paddingTop="@dimen/dp_20"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/bill_image_allbill"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:button="@null"
                android:background="@mipmap/quanbudd_ddf"
                android:layout_marginLeft="@dimen/dp_3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部订单"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:layout_marginTop="@dimen/dp_10"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/bill_image_pay"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:button="@null"
                android:background="@mipmap/daifuk_ddf"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/bill_image_task"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:button="@null"
                android:background="@mipmap/daishouh_ddf"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待收货"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/bill_image_appraise"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:button="@null"
                android:background="@mipmap/daipingj_ddf"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待评价"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/bill_image_finish"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:button="@null"
                android:background="@mipmap/yiwanc_ddf"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已完成"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_1"
                />
        </LinearLayout>
    </LinearLayout>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/bill_xrecy"
        android:layout_width="@dimen/dp_312"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bill_radiogroup_radius"
        app:layout_constraintTop_toBottomOf="@id/bill_group"
        android:layout_marginTop="@dimen/dp_15"
        android:padding="@dimen/dp_10"

        ></com.jcodecraeer.xrecyclerview.XRecyclerView>

</LinearLayout>