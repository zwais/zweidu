<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/item_pop_creation_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="asfg"
        android:textColor="#f2f2f2"
        android:textSize="@dimen/sp_14"
        android:contentDescription="#666666"
        />
    <TextView
        android:id="@+id/item_pop_creation_text_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/item_pop_creation_text_name"
        app:layout_constraintRight_toLeftOf="@id/xian"
        android:layout_marginRight="@dimen/dp_16"
        android:textColor="#f2f2f2"
        android:text="sagvadoinva"
        />
    <TextView
        android:id="@+id/item_pop_creation_text_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/xian"
        app:layout_constraintTop_toBottomOf="@id/item_pop_creation_text_name"
        android:layout_marginRight="@dimen/dp_50"
        android:text="sagvadoinva"
        android:textColor="#f2f2f2"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/item_pop_creation_text_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:text="选择"
        android:textColor="#ff5f71"
        android:textSize="@dimen/sp_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/heng"
        />
    <TextView
        android:id="@+id/xian"
        android:layout_width="1dp"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintRight_toLeftOf="@id/item_pop_creation_text_check"
        android:layout_marginRight="@dimen/dp_8"
        android:background="#f2f2f2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/heng"

        />
    <TextView
        android:id="@+id/heng"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/item_pop_creation_text_address"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#f2f2f2f2"
        />
</android.support.constraint.ConstraintLayout>