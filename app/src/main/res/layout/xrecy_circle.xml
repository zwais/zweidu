<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_20"
    android:background="@drawable/circle_radius"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/item_circle_image_header"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/item_circle_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fresco:layout_constraintTop_toTopOf="@id/item_circle_image_header"
        fresco:layout_constraintBottom_toBottomOf="@id/item_circle_image_header"
        fresco:layout_constraintLeft_toRightOf="@id/item_circle_image_header"
        android:layout_marginLeft="@dimen/dp_6"
        android:text="safggafs"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"
        />
    <TextView
        android:id="@+id/item_circle_text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fresco:layout_constraintTop_toTopOf="@id/item_circle_image_header"
        fresco:layout_constraintBottom_toBottomOf="@id/item_circle_image_header"
        fresco:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_6"
        android:text="safggafs"
        android:textSize="@dimen/sp_10"
        android:textColor="#666666"
        />
    <TextView
        android:id="@+id/item_circle_text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintTop_toBottomOf="@id/item_circle_image_header"
        android:layout_marginLeft="@dimen/dp_6"
        android:text="safggafs"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        />
    <ImageView
        android:id="@+id/item_circle_image_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintTop_toBottomOf="@id/item_circle_text_content"
        fresco:layout_constraintBottom_toTopOf="@id/item_circle_image_like"
        />
    <TextView
        android:id="@+id/item_circle_text_num"
        android:layout_width="@dimen/dp_25"
        android:layout_height="wrap_content"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/sp_14"
        android:lines="1"
        android:text="safggafs"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        android:layout_marginBottom="@dimen/dp_2"
        />
    <ImageView
        android:id="@+id/item_circle_image_like"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        fresco:layout_constraintRight_toLeftOf="@id/item_circle_text_num"
        fresco:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/dp_10"
        />
</android.support.constraint.ConstraintLayout>